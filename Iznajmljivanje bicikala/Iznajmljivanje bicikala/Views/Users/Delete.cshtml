@model Iznajmljivanje_bicikala.Models.ApplicationUser

@{
    ViewData["Title"] = "Brisanje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Brisanje</h1>

<h3>Da li ste sigurni da želite da obrišete ovog korisnika?</h3>
<div>
    <h4>Korisnik</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad na listu</a>
    </form>
</div>
